<!DOCTYPE html>
<html lang="en">

<head>

  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

  <title>Dashboard User</title>

</head>

<body>
  <%- include('../partials/navbar') %>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Your movies...</h1>
    <% if(messages.info) { %>
      <div class="alert alert-danger" role="alert">
          <%= messages.info %>
      </div>
      <% } %>

    <br><br>
    <%data.forEach(e=>{%>
    <div class="row placeholders">
      <div class="col-xs-6 col-sm-3 placeholder">
        <img src="<%= e.Movie.image %>" width="200" height="200" class="img-responsive"
          alt="Generic placeholder thumbnail">
        <h4><%=e.Movie.title%></h4>
        <span class="text-muted"><a href="/user/detailBooking/<%=e.id%>/<%=e.Movie.id%>/<%=e.User.id%>">Detail</a> | <a
            href="/user/cancelBooking/<%=e.id%>/<%=e.User.id%>">Cancel</a>
          | <a href="/movie/<%=e.Movie.id%>">About Movie</a>
        </span>
      </div>
      <%})%>
      <%if(seats){%>
      <p>Your Detail Booking :</p><br>
      <b>Title : <%=movie.title%></b><br><br>
      <b>Time :<%=movie.date%></b><br><br>
      <b>Seats:
        <%seats.forEach(e=>{%>
        <li><%=e.seatName%></li>
        <%})%>
      </b><br><br>
      <%}%>


          </div>



    
  </body>
</html>